<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"><head>
        {{>header}}
        <script src="/static/js/jquery-1.7.2.min.js"></script>
        <link rel="stylesheet" href="/static/css/jquery.ambiance.css"/>
        <script src="/static/js/common.js"></script>
        <script src="/static/tinymce/jscripts/tiny_mce/tiny_mce.js"></script>
        <script src="/static/js/add-product.js"></script>
        <script src="/static/js/jquery.ambiance.js"></script>
        <script src="/static/js/ScriptToolTip.js" type="text/javascript"></script>

    </head>
    <body>

        <form name="form1" method="post" action="#" id="form1">

            <ul class="uav">
                {{>top-banner}}

            </ul>
            <ul class="umh">
                {{>top-nav}}


            </ul>

            <div class="divl">
                <div class="g y">
                    {{>support}}
                </div>
                <div class="g">
                    <div class="dtl">&nbsp;</div>
                </div>
            </div>
            <div class="divr">
                <div class="h2dt">Thông tin sản phẩm</div>
                <div style="width: 100%;display: block;margin: 0 5px 0 5px;">
                    <style>
                        .wrap-input{
                            width: 349px;
                            float: left;
                            display: inline;
                            padding: 5px;
                            border: 1px solid #cfcfcf;
                            margin: 5px;
                        }
                        .label{
                            width: 80px;
                            float: left;
                        }
                        .value{
                            width: 250px;
                            float: right;
                        }

                        input[type=text]{
                            width: 235px;
                            padding: 5px;

                        }
                        input[type=checkbox]{
                            float: right;
                        }
                        .width620{
                            width: 620px;
                        }
                        .width720{
                            width: 720px;
                        }
                        .width300{
                            width: 300px;
                        }
                        .width605{
                            width: 605px;
                        }
                        .paddingtop6{
                            padding-top: 6px;
                        }
                    </style>
                    <input type="hidden" id="id" value="{{id}}"/>
                    <div class="wrap-input width720" >
                        <div class="label paddingtop6" >url</div>
                        <div class="value width620" >
                            <input type="text" id="url" class="width605" value="url{{id}}" />
                        </div>

                    </div>
                    <div class="wrap-input width720" >
                        <div class="label paddingtop6" >name</div>
                        <div class="value width620"  >
                            <input type="text" id="name"  class="width605" value="name{{id}}"  /></div>
                    </div>
                    <div class="wrap-input width720" >
                        <div class="label paddingtop6"  >name VN</div>
                        <div class="value width620" >
                            <input type="text" id="namevn" class="width605" value="namevn{{id}}" /></div>

                    </div>
                    <div class="wrap-input">
                        <div class="label paddingtop6" >short desc</div>
                        <div class="value">
                            <input type="text" id="shortdesc" value="short_dest{{id}}"
                                   /></div>

                    </div>

                </div>
                <div class="wrap-input" style="width: 349px;height: 29px">
                    <div class="label">category</div>
                    <div class="value">
                        <select id="category" style="width: 250px;padding: 5px">
                            <option value='' ></option>
                            {{#CATEGORY}}<option value='' ></option>{{/CATEGORY}}
                        </select>
                    </div>
                </div>
                <div class="wrap-input">
                    <div class="label width300" >is promote</div>
                    <input type="checkbox"  value="" id="is_promote" checked='{{is_promote_checked}}' >
                </div>
                <div class="wrap-input">
                    <div class="label width300" >is fearture</div>
                    <input type="checkbox"  value="" id="is_fearture" checked='{{is_fearture_checked}}' >
                </div>
                <div class="wrap-input">
                    <div class="label width300" >is active</div>
                    <input type="checkbox"  value="" id="is_active" checked='{{is_active_checked}}' >
                </div>




                <div style="clear:both"></div>

                <div style="text-align:justify;line-height:150%; padding:10px;clear:both">



                    <div class="editor" style="display: block;width: 100%;height: 480px">
                        <textarea id="description">long_desc{{id}}</textarea>
                    </div>
                    <div>
                        <div style="padding-top: 10px;width: 400px;float: left;color: red;" id="error"></div>

                        <input type="button" id="add-product" class="post" value="Thêm sản phẩm" style="padding: 5px;
                               margin: 5px;
                               margin-right: 0;
                               float: right;"/>
                    </div>
                    <div style="clear:both"></div>
                </div>
            </div>
            <div class="cl"></div>
            {{#UPDATE}}
            <!--image-->
            <!--<script src="/static/js/jquery-2.1.1.min.js"></script>-->
            <script src="/static/js/fileupload/vendor/jquery.ui.widget.js"></script>
            <script src="/static/js/fileupload/jquery.iframe-transport.js"></script>
            <script src="/static/js/fileupload/jquery.fileupload.js"></script>
            <div style="width: 100%;display: block;margin: 0 5px 0 5px;">
                <div class="wrap-input">
                    <div class="label" style="width: 300px">Cập nhật hình ảnh</div>
                    <input type="file" name="image" value="" id="image-file"/></div>
                <div style="clear:both"></div>

                <div style="width: 100%;display: block;margin: 10px;margin-left: auto;margin-right: auto">
                    <img id="thumb" src="{{thumb}}" style="display: block;margin-left: auto;margin-right: auto"/>
                </div>
            </div>
            <div id="progress" class="progress">
                <div class="progress-bar progress-bar-success" 
                     style="width: 700px;height: 5px;background: green;margin: auto;"></div>
            </div>
            <div class="cl"></div>

            {{/UPDATE}}
            <ul class="ulft">
                {{>company}}
            </ul>
            <div class="cl"></div>
            <div class="dhead">
                {{>top-head}}
            </div>

        </form>
        {{>side-ads}}


    </body></html>